{
  "kind": "collectionType",
  "collectionName": "image_migration_stats",
  "info": {
    "singularName": "image-migration-stat",
    "pluralName": "image-migration-stats",
    "displayName": "image-migration-stat",
    "description": "Statistics and status tracking for image migration to Cloudflare"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "image": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::image.image",
      "inversedBy": "migration_stats"
    },
    "migration_status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "failed"],
      "default": "pending"
    },
    "migration_error": {
      "type": "text"
    },
    "migrated_at": {
      "type": "datetime"
    },
    "last_attempt_at": {
      "type": "datetime"
    },
    "retry_count": {
      "type": "integer",
      "default": 0
    }
  }
}